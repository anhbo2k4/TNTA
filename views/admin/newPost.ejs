<%- include('head') %>
<body>
 <main class="hp-bg-color-dark-90 d-flex min-vh-100">
   <%- include('navbar') %>
   <div class="hp-main-layout-content">
      <div class="row mb-32 g-32">
         <div class="col flex-grow-1 overflow-hidden">
            <div class="row g-32">
               <div class="col-12">
                 <div class="hp-border-color-black-0 hp-border-color-dark-80 hp-bg-black-20 hp-bg-dark-80 hp-rounded-12">
                    <div class="card-body">
                       <h1 class="hp-mb-0">Manage Post</h1>
                       <div class="d-flex justify-content-start mt-32">
                        <a href="/admin/upPost" class="btn btn-primary">Create New Post</a>
                       </div>
                       <div class="table-responsive">
                        <table class="table table-striped">
                           <thead>
                              <tr>
                                 <th>STT</th>
                                 <th>Image</th>
                                 <th>Title</th>
                                 <th>Content</th>
                                 <th>Views</th>
                                 <th>Likes</th>
                                 <th>Actions</th>
                              </tr>
                           </thead>
                           <tbody>
                              <% posts.forEach((post, index) => { %>
                                 <tr>
                                    <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                                    <td><img src="<%= post.imageUrl %>" alt="building" style="width: 50px; height: 50px;"></td>
                                    <td><%= post.title %></td>
                                    <td><%= post.content.substring(0, 100) %>...</td>
                                    <td><%= post.views %></td>
                                    <td><%= post.likes %></td>
                                    <td>
                                        <a href="/admin/editPost/<%= post.id %>" class="btn btn-primary" style="width: 100px; text-align: center;">Edit</a>
                                        <a href="/admin/deletePost/<%= post.id %>" class="btn btn-danger" style="width: 100px; text-align: center;">Delete</a>
                                    </td>
                                 </tr>
                              <% }) %>
                           </tbody>
                        </table>
                       </div>

                       <div class="d-flex justify-content-center mt-32">
                        <nav aria-label="Page navigation">
                          <ul class="pagination">
                            <% for(let i = 1; i <= totalPages; i++) { %>
                              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                              </li>
                            <% } %>
                          </ul>
                        </nav>
                       </div>
                    </div>
                 </div>
               </div>
            </div>
          </div>
      </div>
   </div>
</main>
    
</body>
